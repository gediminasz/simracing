logLevel : "info"
eventsLogSize : 10000

name : "!localhost"

secure : true

maxPlayerCount : 64

bindIP : "127.0.0.1"
steamPort : 8766
hostPort : 27015
queryPort : 27016

sleepWaiting : 50
sleepActive : 10

sportsPlay: true

enableHttpApi : true
httpApiLogLevel : "warning"
httpApiInterface : "127.0.0.1"
httpApiPort : 9000
httpApiExtraHeaders : {
    "*" : "Access-Control-Allow-Origin: *"
}
httpApiAccessFilters : {
    "public" : [
        { "type" : "accept" }
    ],
    "private" : [
        { "type" : "ip-accept", "ip" : "127.0.0.1/32" },
        { "type" : "group", "group" : "private" },
        { "type" : "reject-password" }
    ],
    "admin" : [
        { "type" : "ip-accept", "ip" : "127.0.0.1/32" },
        { "type" : "group", "group" : "admin" },
        { "type" : "reject-password" }
    ],
}
httpApiUsers : {
    //"dave" : "letmein",
    //"renato" : "letmeintoo"
}
httpApiGroups : {
    //"private" : [ "dave", "renato" ],
    //"admin" : [ "dave" ],
}
staticWebFiles: "web_files"

enableLuaApi : false
luaAddonRoot: "lua"
luaConfigRoot: "lua_config"
luaOutputRoot: "lua_output"
luaApiAddons : [
    "sms_base",
]
luaAllowedLibraries : [
    "lib_rotate"
]

allowEmptyJoin : true

controlGameSetup : true

sessionAttributes : {
    "ServerControlsTrack" : 1,
    "ServerControlsVehicleClass" : 1,
    "ServerControlsVehicle" : 0,

    "GridSize" : 30,
    "MaxPlayers" : 11,

    "PracticeLength" : 0,
    "QualifyLength" : 5,
    "RaceLength" : 15,

    "Flags" : ${flags},

    "OpponentDifficulty" : 85,

    // Visual only damage
    "DamageType" : 1,

    // No tire wear.
    "TireWearType" : 8,

    // Fuel usage off.
    "FuelUsageType" : 2,

    // Penalties on.
    "PenaltiesType" : 1,

    // Any camera view allowed.
    "AllowedViews" : 0,

    "TrackId" : ${track_id},
    "VehicleClassId" : ${vehicle_class},

    "RaceDateHour" : 15,

    "PracticeWeatherSlots" : 0,
    "PracticeWeatherProgression": 1,

    "QualifyWeatherSlots" : 0,
    "QualifyWeatherProgression": 1,

    "RaceWeatherSlots" : 0,
    "RaceWeatherProgression": 1,
}
